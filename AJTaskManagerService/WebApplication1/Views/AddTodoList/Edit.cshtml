@model WebApplication1.Models.AddTodoListModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit task</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>AddTodoListModel</h4>*@
        <hr />
        @Html.ValidationSummary(true)

        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
        @Html.HiddenFor(model => model.ListId)

        <div class="form-group">
            @Html.LabelFor(model => model.ListName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ListName)
                @Html.ValidationMessageFor(model => model.ListName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GroupName, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("GroupID", null, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.GroupName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsCompleted, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.IsCompleted)
                @Html.ValidationMessageFor(model => model.IsCompleted)
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.GroupId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GroupId)
                @Html.ValidationMessageFor(model => model.GroupId)
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to tasks", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
